<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CardViewHeaderStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NormalButtonTextStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/purple_500</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="TitleStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="NormalTextStyle">
        <item name="android:textColor">@color/normal_text</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="InactiveButtonStyle">
        <item name="android:background">@color/inactive_button_background</item>
        <item name="android:textColor">@color/inactive_button_text</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>